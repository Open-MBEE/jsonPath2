#!/bin/bash

classpath="${HOME}/git/jsonPath2/target/classes:${HOME}/.m2/repository/junit/junit/4.8.1/junit-4.8.1.jar:${HOME}/.m2/repository/log4j/log4j/1.2.17/log4j-1.2.17.jar:${HOME}/.m2/repository/org/scala-lang/scala-library/2.11.8/scala-library-2.11.8.jar:${HOME}/.m2/repository/org/json/json/20140107/json-20140107.jar:${HOME}/.m2/repository/org/antlr/antlr4/4.7/antlr4-4.7.jar:${HOME}/.m2/repository/org/antlr/antlr4-runtime/4.7/antlr4-runtime-4.7.jar:${HOME}/.m2/repository/org/antlr/antlr-runtime/3.5.2/antlr-runtime-3.5.2.jar:${HOME}/.m2/repository/org/antlr/ST4/4.0.8/ST4-4.0.8.jar:${HOME}/.m2/repository/org/abego/treelayout/org.abego.treelayout.core/1.0.3/org.abego.treelayout.core-1.0.3.jar:${HOME}/.m2/repository/org/glassfish/javax.json/1.0.4/javax.json-1.0.4.jar:${HOME}/.m2/repository/com/ibm/icu/icu4j/58.2/icu4j-58.2.jar:${HOME}/.m2/repository/org/apache/commons/commons-math3/3.6.1/commons-math3-3.6.1.jar:${HOME}/.m2/repository/org/nuiton/thirdparty/JRI/0.9-9/JRI-0.9-9.jar:${HOME}/git/Klang/lib/com.microsoft.z3.jar:${HOME}/git/util/target/classes:${HOME}/.p2/pool/plugins/org.junit_4.12.0.v201504281640/junit.jar:${HOME}/.p2/pool/plugins/org.hamcrest.core_1.3.0.v201303031735.jar:${HOME}/.m2/repository/org/apache/commons/commons-lang3/3.0/commons-lang3-3.0.jar:${HOME}/git/sysml/target/classes:${HOME}/.m2/repository/org/apache/commons/commons-collections4/4.0/commons-collections4-4.0.jar:${HOME}/git/bae/target/bae-2.3.6-SNAPSHOT.jar:${HOME}/git/Klang/target/klang-2.3.6-SNAPSHOT.jar"

javac -nowarn -classpath ${classpath} ${HOME}/git/jsonPath2/src/gov/nasa/jpl/jsonPath2/*.java &&
java -Dfile.encoding=UTF-8 -classpath ${classpath} -Xmx10000m gov.nasa.jpl.jsonPath2.Path "$@"